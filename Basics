--creating table
create table persons
(
personid int,
lastname varchar(255),
firstname varchar(255),
address varchar(255),
city varchar(255)
);

drop table persons; --droping table

alter table persons add phone_no varchar(10); --altering table to add columns
alter table persons drop column phone_no; --altering table to drop columns
alter table persons alter column personid varchar(10); --change column datatype

--alter table persons alter column personid DROP NULL;
